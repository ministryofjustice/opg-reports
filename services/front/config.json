{
    "organisation": "OPG",
    "sections": [
        {
            "name": "Home",
            "href": "/",
            "exclude": true,
            "template": "static-home"
        },
        {
            "name": "Overview",
            "href": "/",
            "template": "static-home",
            "sections": [
                {
                    "name": "GitHub",
                    "href": "/github/",
                    "header": true,
                    "sections": [
                        {
                            "name": "Repository Standards",
                            "href": "/github/repository-standards/",
                            "api": {
                                "list": "/github/standards/v1/list/"
                            },
                            "template": "dynamic-github-standards-list"
                        }
                    ]
                },
                {
                    "name": "AWS Costs",
                    "href": "/costs/aws/",
                    "header": true,
                    "sections": [
                        {
                            "name": "Totals",
                            "href": "/costs/aws/totals/",
                            "api": {
                                "totals": "/aws/costs/v1/monthly/{month:-11}/{billingMonth}/"
                            },
                            "template": "dynamic-aws-costs-totals"
                        },
                        {
                            "name": "By Unit",
                            "href": "/costs/aws/units/",
                            "api": {
                                "units": "/aws/costs/v1/monthly/{month:-11}/{billingMonth}/units/"
                            },
                            "template": "dynamic-aws-costs-units"
                        },
                        {
                            "name": "By Unit & Env",
                            "href": "/costs/aws/units-envs/",
                            "api": {
                                "units-envs": "/aws/costs/v1/monthly/{month:-11}/{billingMonth}/units/envs/"
                            },
                            "template": "dynamic-aws-costs-units-envs"
                        },
                        {
                            "name": "Detailed",
                            "href": "/costs/aws/detailed/",
                            "api": {
                                "detailed": "/aws/costs/v1/monthly/{month:-9}/{billingMonth}/units/envs/services/"
                            },
                            "template": "dynamic-aws-costs-units-envs-services"
                        }
                    ]
                },
                {
                    "name": "Uptime & Incidents",
                    "href": "/uptime-incidents/",
                    "header": true,
                    "sections": [
                        {
                            "name": "Service uptime",
                            "href": "/uptime-incidents/uptime/"
                        }
                    ]
                }
            ]
        }

    ],
    "standards": {
        "repository": {
            "baseline": [
                "has_default_branch_of_main",
                "has_license",
                "has_issues",
                "has_description",
                "has_rules_enforced_for_admins",
                "has_pull_request_approval_required"
            ],
            "extended": [
                "has_code_owner_approval_required",
                "has_readme",
                "has_code_of_conduct",
                "has_contributing_guide"
            ],
            "information": [
                "archived",
                "branch_name",
                "has_delete_branch_on_merge",
                "has_pages",
                "has_downloads",
                "has_discussions",
                "has_wiki",
                "forks",
                "webhooks",
                "open_pull_requests",
                "clone_traffic",
                "is_private",
                "last_commit_date"
            ]
        }
    }
}
